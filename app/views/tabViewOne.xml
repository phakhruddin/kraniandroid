<Alloy>
  <Collection src="project"/>
  <Collection src="client"/>
  <Collection src="invoice"/>
  <Collection src="inventory"/>
  <Collection src="labor"/>
  <Collection src="schedule"/>
  <Collection src="proposal"/>
  <Collection src="master"/>
  <Collection src="joblogsid"/>
  <Tab id="tab_one" titleColor="white" backgroundFocusedColor="white">
    <Window id="tabviewone_window" title="Krani" class='container'>
 		<ActionBar id="actionbar"/>
	   	<Menu>
	       	<MenuItem id="item1" title="Logout" icon='Ti.Android.R.drawable.ic_menu_add' showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"/>  
	    </Menu>
    	<ActivityIndicator id="activityIndicator" style="Titanium.UI.ActivityIndicatorStyle.BIG_DARK" message="Loading.."/>
    	<TableView>
      		<HeaderView id="tabviewone_headerview">
				<View height="20" id="status_view" backgroundColor="red">
					<Label id="status_label" color="white" text="Please click login" textAlign="right"/>				
				</View>
			</HeaderView>
			 <TableViewRow id="user_row" opacity="1.0" height="5" >
			 	<Label id="user_label" textAlign="center" left="50"/>			 
		 	</TableViewRow>
		 	<TableViewRow id="schedule" title="Schedule">
		 		<Label id="label_schedule" text="Schedule" color="orange"></Label>
		 		<ImageView image="/images/calendar90.png" width="50" height="50" left="20"></ImageView>
		 	</TableViewRow>
	      <TableViewRow id="location" backgroundColor="transparent"  title="Location">
		   		  <Label id="label_location" color="#333" text="Locate Tech"/>
		   		  <ImageView image="/images/man388.png" left="20" height="50" width="50"/>
		   </TableViewRow>
		   <TableViewRow id="project" backgroundColor="transparent" title="Project">
		   		  <Label id="label_project" color="#008080" text="Projects"/>
		   		  <ImageView image="/images/silhouette35.png" left="20" height="50" width="50"/>
		   </TableViewRow>
		   <TableViewRow id="client" backgroundColor="transparent" title="Clients">
		   		  <Label id="label_clients" color="#228B22" text="Clients"/>
		   		  <ImageView image="/images/hands8.png" left="20" height="50" width="50"/>
		   </TableViewRow>
		   <TableViewRow id="invoicelistlist" backgroundColor="transparent" title="Invoice">
		   		   <Label id="label_invoice" color="#008080" text="Invoice"/>
		   		  <ImageView image="/images/dollar150.png"  left="20" height="50" width="50"/>
		   </TableViewRow>
   		   <TableViewRow id="proposallistlist" backgroundColor="transparent" title="Proposal">
		   		  <Label id="label_proposal" color="#008080" text="Proposal"/>
		   		  <ImageView image="/images/silhouette61.png"  left="20" height="50" width="50"/>
		   </TableViewRow>
   		   <TableViewRow id="settings" backgroundColor="transparent" title="Settings">
		   		  <Label id="label_settings" color="orange" text="Settings"/>
		   		  <ImageView image="/images/gear37.png"  left="20" height="50" width="50"/>
		   </TableViewRow>
		   <TableViewRow id="google" Title="google"/>
		   <TableViewRow id="loginrow" backgroundColor="transparent">
		   		  <Button id="login_button" title="LOGIN" onClick="login" borderColor="gray" borderWidth="0.2" borderRadius="20"  color="white" right="50" />
		   		  <View id="logout_view" left='20' height='40' width="80" borderColor="gray" borderRadius="20" backgroundColor="white" borderWidth="0.5" >
		   		  	<Label id="logout_button" title="Logout" text="Logout" color="gray" font="{fontSize:'14'}"/>
		   		  </View>
		   </TableViewRow>
    	</TableView>
    </Window>  
    </Tab>
</Alloy>